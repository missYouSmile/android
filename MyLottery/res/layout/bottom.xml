<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_lottery_home" />

        <ImageView
            android:id="@+id/btn_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_lottery_hall" />

        <ImageView
            android:id="@+id/btn_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_lottery_recharge" />

        <ImageView
            android:id="@+id/btn_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/id_buttom_bg"
            android:src="@drawable/id_lottery_myself" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/bottom_buy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/id_buttom_menu_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:src="@drawable/id_clear_choose" />

        <TextView
            android:id="@+id/tv_by_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/s_buy_msg"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btn_choose_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:src="@drawable/id_choose_ok" />
    </LinearLayout>

</RelativeLayout>